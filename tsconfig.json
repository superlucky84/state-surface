{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": ".",
    "jsx": "react-jsx",
    "jsxImportSource": "lithent",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "state-surface": ["./engine/index.ts"],
      "state-surface/server": ["./engine/server.ts"],
      "state-surface/client": ["./engine/client.ts"]
    }
  },
  "include": ["engine", "server.ts", "client", "shared", "routes", "layouts"],
  "exclude": ["node_modules", "dist"]
}
